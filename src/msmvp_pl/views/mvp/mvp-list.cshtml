@using System.Linq
@{
    Layout = "_layout.cshtml";
}

@section Title{ Lista polskich MVP > }
@section LeftSidebar{
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">C#</li>
              <li class="active"><a href="#">C# MVP 1</a></li>
              <li><a href="#">C# MVP 2</a></li>
              <li class="nav-header">SQL Server</li>
              <li><a href="#">SQL Server MVP 1</a></li>
              <li><a href="#">SQL Server MVP 2</a></li>
              <li class="nav-header">(...)</li>
              <li><a href="#">...</a></li>  
              <li><a href="#">...</a></li>
            </ul>
          </div><!--/.well -->
}

<h1>Polscy MVP</h1>

<ul class="nav nav-tabs">
    <li class="active"><a href="#mvp-current" data-toggle="tab">Aktualni</a></li>
    <li><a href="#mvp-ex" data-toggle="tab">Ex-MVP</a></li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade in active" id="mvp-current">
        <ul class="nav nav-list">
            @foreach (var mvp in @Model.CurrentMvps())
            {
                <li><a href="#">@mvp.Name (@mvp.Nominations.Count)</a></li>
            }
        </ul>
    </div>
    <div class="tab-pane fade" id="mvp-ex">
        <ul class="nav nav-list">
            @foreach (var mvp in @Model.ExMvps())
            {
                <li><a href="#">@mvp.Name @(((System.Collections.Generic.IEnumerable<dynamic>)mvp.Nominations).Last().EndDate</a></li>
            }
        </ul>
    </div>
</div>