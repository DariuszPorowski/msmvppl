                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                </a>
                <a class="brand" href="@Url.Content("~/")">MS MVP PL</a>
                <div class="nav-collapse">
                <ul class="nav">
                    <li class="active"><a href="@Url.Content("~/")">Strona główna</a></li>
